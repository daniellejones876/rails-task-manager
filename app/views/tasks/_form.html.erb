<%= form_with model: task do |f| %>
  <div class="container-sm">
    <div class="card">
      <div class="card-body mb-3">
        <%= f.label :title, { class: "form-label"} %>
        <%= f.text_field :title, { class: "form-control", placeholder: "what to do?"} %>
        <%= f.label :details, { class: "form-label"} %>
        <%= f.text_field :details, { class: "form-control", placeholder: "How to do it?"}%>
        <%= f.label :completed, { class: "form-label"} %>
        <%= f.text_field :completed, { class: "form-control"}%>
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
